{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "labels": [
    "area/dependency"
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "area/dependency",
      "kind/security"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/^flux/apps/.+\\.yaml$/",
      "/^flux/clusters/.+\\.yaml$/",
      "/^flux/repos/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/main.tf$/",
        "/variables.tf$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+[A-Za-z0-9_]+\\s+=\\s\"(?<currentValue>\\S+)\""
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/requirements.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?)( depName=(?<depName>.*?))?( versioning=(?<versioning>.*?))?\\s+[A-Za-z0-9_]+:\\s\"(?<currentValue>\\S+)\""
      ]
    }
  ]
}
